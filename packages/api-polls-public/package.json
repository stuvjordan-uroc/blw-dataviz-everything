{
  "name": "api-polls-public",
  "version": "1.0.0",
  "description": "Public API for poll sessions and questions",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "default": "./dist/main.js"
    },
    "./app.module": {
      "types": "./dist/app.module.d.ts",
      "default": "./dist/app.module.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "start:dev": "ts-node --transpile-only src/main.ts",
    "start:dev:watch": "ts-node --transpile-only --watch src/main.ts",
    "lint": "eslint src --ext .ts",
    "test": "jest --config test/jest.config.js",
    "test:watch": "jest --config test/jest.config.js --watch",
    "test:cov": "jest --config test/jest.config.js --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config test/jest.config.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^2.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "nanoid": "^5.0.0",
    "postgres": "^3.4.7",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "shared-computation": "*",
    "shared-schemas": "*",
    "shared-types": "*",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}