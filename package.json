{
  "name": "blw-dataviz-everything",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc --build",
    "lint": "eslint packages/*/src --ext .ts",
    "lint:fix": "eslint packages/*/src --ext .ts --fix",
    "clean": "tsc --build --clean",
    "aws:auth": "./scripts/aws-auth.sh",
    "aws:logout": "aws sso logout --profile ${AWS_PROFILE:-default}",
    "db:start": "docker compose up -d postgres",
    "db:stop": "docker compose down",
    "db:logs": "docker compose logs -f postgres",
    "db:reset": "docker compose down -v && docker compose up -d postgres",
    "db:generate": "cd packages/db && npx tsx src/scripts/generate-migration.ts",
    "db:generate:named": "cd packages/db && npx tsx src/scripts/generate-migration.ts",
    "db:migrate": "cd packages/db && npx tsx src/scripts/migrate.ts",
    "db:rollback": "cd packages/db && npx tsx src/scripts/migrate.ts rollback",
    "db:fresh": "npm run db:reset && sleep 5 && npm run db:migrate",
    "db:studio": "cd packages/db && npx drizzle-kit studio"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.38.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.7",
    "pg": "^8.16.3"
  }
}