# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/blw_dataviz
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5433/blw_dataviz_test
POSTGRES_DB=blw_dataviz
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATA_MIGRATIONS_BUCKET=blw-dataviz-everything

# AWS Configuration (using SSO).  Needed for data migrations.
AWS_PROFILE=default
AWS_REGION=us-east-2

# Environment
NODE_ENV=development

# Polling Admin API
POLLING_ADMIN_PORT=3003

# Polling Public API
# Batch update interval in milliseconds for response aggregation
# This controls how frequently the api-polls-public service processes queued responses
# Lower values = more frequent updates but higher CPU usage
# Higher values = less frequent updates but lower CPU usage
BATCH_UPDATE_INTERVAL_MS=3000

# JWT Authentication
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# Initial Admin User (for seeding)
# These credentials are used by the seed script to create the first admin user
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=changeme123
